flowchart TB
    subgraph PermissionPoints["권한 체크 포인트"]
        direction TB
        
        subgraph MenuLevel["메뉴 레벨"]
            MenuPerm["menu.permission<br/>{action, targetType}"]
            MenuVisible["메뉴 표시/숨김"]
        end

        subgraph ListLevel["ListPage 레벨"]
            CreateBtn["Create 버튼<br/>action: create"]
            RowActions["Row Actions<br/>update, delete, activate"]
            CSVDownload["CSV Download<br/>action: list"]
        end

        subgraph DetailLevel["DetailPage 레벨"]
            EditBtn["Edit 버튼<br/>action: update"]
